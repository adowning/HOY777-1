{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "useDefineForClassFields": true,
    "composite": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "lib": ["esnext", "dom"],
    "types": ["node"],
    "paths": {
      "#/*": ["src/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*", "drizzle.config.ts" ],
  "exclude": ["node_modules", "dist", "public", "coverage", "test", "tests", "tests/*", "src/tests/*"]
}
