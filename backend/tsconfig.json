{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["node"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.d.ts", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}
