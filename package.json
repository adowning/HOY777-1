{
  "name": "hoy777-monorepo",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "mobile"
  ],
  "scripts": {
    "dev": "concurrently --names \"FRONTEND,BACKEND\" --prefix-colors \"blue,magenta\" \"bun --cwd frontend dev\" \"bun --cwd frontend dev\"",
    "dev:backend": "bun --cwd backend dev | bunx pino-pretty",
    "drizzle:studio": "bun --cwd backend drizzle-kit studio"
  },
  "devDependencies": {
    "bun-types": "^1.2.19",
    "concurrently": "^9.2.0"
