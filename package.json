    "@hono/zod-openapi": "^1.0.2",
    "@platformatic/php-node": "^1.4.0",
    "@scalar/hono-api-reference": "^0.9.12",
    "@t3-oss/env-core": "^0.13.8",
    "chalk": "^5.4.1",
    "dotenv": "^17.2.0",
    "dotenv-expand": "^12.0.2",
    "drizzle-orm": "^0.44.3",
    "drizzle-zod": "^0.8.2",
    "hono-pino": "^0.10.1",
    "jose": "^6.0.12",
    "pinia": "^3.0.3",
    "pinia-plugin-persistedstate": "^4.4.1",
    "pino-pretty": "^13.0.0",
    "stoker": "^1.4.3",
    "zod": "^4.0.5"
  },
  "trustedDependencies": [
